<div class="container">
  <div class="row">
    <div class="col-3 p-3">
      <h4>Category</h4>
      <ul class="list-group">
        <% @categories.each do |category| %>
          <li class="list-group-item list-group-item-action m-1 border rounded-1"><%= category.name %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-9">
      <div class="d-flex flex-wrap">
        <% @dishes.each do |dish| %>
          <div class="col-4 p-3">
            <div class="card">
              <img src="<%= dish.image %>" class="card-img-top" height="180">
              <div class="card-body">
                <h5 class="card-title"><%= link_to dish.name , dish , class: "text-decoration-none text-reset" %></h5>
                <p class="card-text"><%= dish.description %></p>
                <button type="button" class="btn btn-outline-primary"><%= dish.category.name %></button>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>